<%= form_for([current_user, blog]) do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div><br>
  <div>
    <%= f.label :content %> <br>
    <%= f.rich_text_area :content %>
  </div><br>
  <div>
    <%= f.label :published_date %>
    <%= f.date_field :published_date %>
  </div><br>

  <%= f.submit button_name %>
<% end %>